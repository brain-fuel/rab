# RabbitMQ Admin Backend Configuration

# ======================
# Server Configuration
# ======================
PORT=3001
NODE_ENV=development
API_KEY=abc123

# ======================
# Frontend Configuration
# ======================
FRONTEND_URL=http://localhost:5173

# ======================
# RabbitMQ Configuration
# ======================
RABBITMQ_ADMIN_USER=admin
RABBITMQ_ADMIN_PASSWORD=pass
RABBITMQ_MANAGEMENT_API_BASE=https://ip:15671/api
API_TIMEOUT=30000

# ======================
# Topology Configuration
# ======================
TOPOLOGY_FILE=./config/topology.yaml

# ======================
# Health Check Configuration  
# ======================
HEALTH_CHECK_INTERVAL=10
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_TIMEOUT=10000

# ======================
# Rolling Restart Configuration
# ======================
RESTART_TIMEOUT=300000
CONNECTION_DRAIN_TIMEOUT=60000
CONNECTION_DRAIN_CHECK_INTERVAL=2000
POST_RESTART_VALIDATION_TIME=15000
INTER_NODE_DELAY=5000

# ======================
# Safety Configuration
# ======================
ENABLE_ROLLING_RESTART=true
REQUIRE_ALL_NODES_HEALTHY=true
ALLOW_RESTART_WITH_PARTITIONS=false

# ======================
# SSH Configuration (for node management)
# ======================
SSH_USER=user
# SSH_KEY_PATH=/path/to/your/ssh/key
SSH_PASSWORD=pass

# ======================
# Logging
# ======================
LOG_LEVEL=info
